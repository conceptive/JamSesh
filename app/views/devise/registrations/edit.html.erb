<div class="row">
    <br>
    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= link_to "Go Back", :back %>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <div class="small-6 large-7 columns">
          <h2> Your Profile</h2>
          <div class="large-6 columns">
            <%= image_tag @user.avatar.url(:medium), class: "edit-profile-pic" %>
            <br>
            <%= f.label "Change Profile Picture" %>
            <%= f.file_field :avatar %>
            <%= f.input :location %>
            <%= f.input :name, required: true %>
            <%= f.input :username, required: true %>
            <%= f.input :email, required: true %>
          </div>
          <div class="large-6 columns">
            <%= f.input :main_instrument, label: "Select your Main Instrument" %>
            <%= f.input :user_instruments, label: "What Other Instruments do you Play?" %>
            <%= f.input :styles, label: "Favorite Styles" %>
            <%= f.label "Choose your skill level:" %>
            <%= f.collection_select :jam_skill_id, JamSkill.all, :id, :name, { promt: "Preferred Skill Level"} %>
          </div>
        </div>
        <div class="small-6 large-5 columns">
          <h2> Account Information </h2>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
            <%= f.input :password_confirmation, required: false %>
            <%= f.input :current_password, hint: "*Type your current password to confirm your changes", required: false %>

        </div>
    
      </div>
      <div class="clearfix"></div>
        <%= f.input :bio, label: "Write Your Bio" %>
        <div class="form-actions submit-btn">
          <%= f.button :submit, "Update Profile" %>
        </div>
    <% end %>
    <div class="clearfix"></div>
    <div class="small-6 large-5 columns cancel-account">
      <p>Unhappy? <%= link_to "Cancel my Account.", registration_path(resource_name), data: { confirm: "Are you sure you want to delete your account?" }, method: :delete %></p>
    </div>

</div>
