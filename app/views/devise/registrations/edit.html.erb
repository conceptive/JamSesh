<div class="row wrapper spacing">
    <br>
    <h2 class="title">Edit <%= resource_name.to_s.humanize %></h2>
    <br>
</div>
<div class="row content-wrapper">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class="small-6 large-7 columns">
          <h3>Profile</h3>
          <br>
          <div class="large-6 columns">
            <%= image_tag @user.avatar.url(:medium), class: "edit-profile-pic" %>
            <br>
            <%= f.label "Change Profile Picture" %>
            <%= f.file_field :avatar %>
            <%= f.input :name, required: true %>
            <%= f.input :username, required: true %>
            <%= f.input :location, :placeholder =>  "Brooklyn, Manhattan, New Jersey" %>
            <%= f.input :email, required: true %>
            <%= f.input :main_instrument, label: "Select your Main Instrument", :placeholder =>  "Drums, Vocals, Piano" %>
            <%= f.label "Choose your skill level:" %>
            <%= f.collection_select :jam_skill_id, JamSkill.all, :id, :name, { promt: "Preferred Skill Level"} %>
          </div>
          <div class="large-6 columns">
            <%= f.input :user_instruments, label: "What Other Instruments do you Play?" %>
            <%= f.input :styles, label: "Favorite Genres", :placeholder =>  "Rock, Alternative, Pop, Jazz, Folk, Cover/Tribute, Classic Rock..." %>
            <%= f.input :influences, label: "Influences", :placeholder =>  "Elvis, Nirvana, John Coltrane, Metallica, Adele..." %>
            <%= f.input :equipment, label: "Equipment", :placeholder =>  "Fender Telecaster, Pearl Drums, Shure, KORG Kaossilator Pro, eBow & pedals..." %>
          </div>
        </div>
        <div class="small-6 large-5 columns">
          <h3> Account Info</h3>
          <div class="acct-box">
            <br>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>

              <%= f.input :password, label: "New Password", autocomplete: "off", required: false %>
              <%= f.input :password_confirmation, label: "Confirm New Password", required: false %>
              <%= f.input :current_password, hint: "* Type your current password to confirm any account changes.", required: false %>
          </div>
        </div>
    
      </div>
      <div class="clearfix"></div>
        <%= f.input :bio, label: "Bio" %>
        <div class="form-actions submit-btn">
          <%= f.button :submit, "Update Profile" %>
        </div>
    <% end %>
    <div class="clearfix"></div>
    <div class="small-6 large-5 columns cancel-account">
      <p>Unhappy? <%= link_to "Cancel my Account.", registration_path(resource_name), data: { confirm: "Are you sure you want to delete your account?" }, method: :delete %></p>
    </div>

</div>
