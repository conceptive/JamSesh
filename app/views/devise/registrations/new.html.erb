<div class="overlay">
  <div class="row">
    <%= link_to "Close", root_path, :class => 'close-overlay' %>
    <div class="overlay-box">
      <div class="large-6 columns">
        <div class="logo"></div>
        <div class="clearfix"></div>
        <h4>Sign up for an account.</h4>
        <ul>
          <li>Find musicians in your area and start jamming!</li>
          <li>Built by musicians just like you.</li>
          <li>Get rates on rehearsal spaces.</li>
          <li>Experiment with new styles.</li>
          <li>Free, always!</li>
        </ul>
        <h4>Don't feel like signing up yet?</h4>
        <%= link_to "Browse Jams", jams_path, :class => 'button' %>
      </div>
      <div class="large-6 columns">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
          	<%= f.input :name, required: true, autofocus: true %>
            <%= f.input :username, required: true %>
            <%= f.input :email, required: true %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, required: true %>
            <%= f.label "Choose your skill level:" %>
            <%= f.collection_select :jam_skill_id, JamSkill.all, :id, :name, { promt: "Preferred Skill Level"}, required: true %>

          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
        <% end %>
        <p> Already have an account? <%= link_to 'Login â†’', new_user_session_path %></p>
      </div>
    </div>
  </div>
</div>