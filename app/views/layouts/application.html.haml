!!! 5
%html
%head
	%title JamSesh - Find other musicians to jam with in NYC
	= stylesheet_link_tag    'application', media: 'all'
	= javascript_include_tag 'application'
	= javascript_include_tag 'vendor/modernizr'
	%meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
	%link{:rel => "stylesheet", :href => "http://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css"}
	%link{:rel => "stylesheet", :href => "http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css"}
	= csrf_meta_tags

%body
	- if notice
		#notice-wrapper
			%p.notice= notice
	- elsif alert
		#notice-wrapper
			%p.alert= alert
	
	%header
		.header-wrapper
			= link_to "", jams_path, class: "logo"
			%nav
				- if user_signed_in?
					%p 
						What's up,
						= link_to current_user.name, user_path(current_user), class:'nav-user'
						= link_to "New Jam Session", new_jam_path, class: "button"
						= link_to "Sign Out", destroy_user_session_path, method: :delete
				- else
					= link_to "Sign in", new_user_session_path
					= link_to "Sign up", new_user_registration_path, class: "button"
			
= yield

%footer
	.wrapper
		= link_to "", jams_path, class: "logo"
		%nav
			= link_to "About", root_path
			= link_to "Privacy Policy", root_path
			= link_to "Terms & Conditions", root_path
			= link_to "Contact", root_path



