.sub-header
	%h2 
		Find a 
		%span Jam Session 
		in Your Area.

%br/
.wrapper
.row.content-wrapper
	.small-9.columns
		%h2 
			Lastest Jams
		%br/
		%p= @genre
		- @jams.each do |jam|
			.results-box
				%h4.text= link_to jam.title, jam
				%p.genre
					= jam.genre.name
				%p
					= image_tag jam.user.avatar.url(:thumb), class: "profile-pic"
					%br/
					by: 
					= link_to jam.user.name, user_path(jam.user_id)
					%br/
					%br/
					Around 
					= jam.location
					%br/ 
					= jam.date
					%br/
					= jam.jam_skill.name
					%br/
					Members: 
					= jam.number_of_musicians
					%br/
					= link_to 'Join this Jam', jam, class: 'button'
		.clearfix
		%br/			
		= will_paginate @jams, previous_label: "Newer", next_label: "Older", inner_window: 1, outer_window: 0
	.small-3.columns
		%h2 Find by:
		%br/
		%ul Genre:
		%li= link_to "All Genres", jams_path
		- Genre.all.each do |genre|
			%li= link_to genre.name, jams_path(genre: genre.name)
	





