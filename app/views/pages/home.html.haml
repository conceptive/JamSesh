.home-overlay
	.home-header
		.logo
	.welcome
		- if user_signed_in?
			.home-sign-out
				= link_to image_tag(current_user.avatar.url(:medium) , class: "header-profile-pic" ), user_path(current_user)
				= link_to "Log Out", destroy_user_session_path, method: :delete
			%h1 
				Welcome Back, 
				%span= current_user.name
				%br/
				= link_to "Browse Jam", jams_path, class: "button"
				or
				= link_to "Create your Own", new_jam_path, class: "button"
		- else
			.home-menu-right
				= link_to "Log in", new_user_session_path
				= link_to "Sign up", new_user_registration_path, class: "signup-btn"	
			%h1
				Find Musicians to 
				%span Jam 
				With in Your City.
				%p A social network for musicians who just want to jam and experiment.
				= link_to "Browse Jams", jams_path, class: "button"
				%p
					Already have an account?
					= link_to "Login", new_user_session_path, class: "home-login"

	.how-it-works
		.row
			%h1 How it Works
			.small-2.large-4.columns
				= image_tag "/images/home_create_profile.png", width: "200px"
				%h4 Create Profile
			.small-4.large-4.columns
				= image_tag "/images/home_talk_to_musicians.png", width: "200px"
				%h4 Talk to Musicians
			.small-6.large-4.columns
				= image_tag "/images/home_start_jammin.png", width: "200px"

				%h4 Start Jammin'
		.spacing
		
	.footer-home
		= link_to "", jams_path, class: "logo"
		%nav.breadcrumbs
			= link_to "About", root_path
			= link_to "Privacy Policy", root_path
			= link_to "Terms & Conditions", root_path
			= link_to "Contact", root_path
